{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist-tests",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/types/index.ts",
    "src/renderer/stores/chat-stream-state.ts",
    "src/renderer/stores/chat-stream-listener.ts",
    "src/renderer/stores/__tests__/chat-stream-state.test.ts",
    "src/renderer/stores/__tests__/chat-stream-listener.test.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-tests"]
}
